generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum VoteType {
  OVERALL
  TECHNICAL
  FUNNY
}

model Contest {
  id                  String    @id @default(cuid())
  name                String
  description         String?
  createdAt           DateTime  @default(now())
  submissionsClosedAt DateTime?
  endsAt              DateTime?

  photos Photo[]
  votes  Vote[]
}

model Photo {
  id          String   @id @default(cuid())
  publicId    String   @unique // Cloudinary public_id
  secureUrl   String
  title       String?
  submittedAt DateTime @default(now())
  active      Boolean  @default(true)

  submitterEmail String?
  submitterId    String?

  contestId String?
  contest   Contest? @relation(fields: [contestId], references: [id])

  votes Vote[]
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  voteType  VoteType @default(OVERALL)

  contestId String
  contest   Contest @relation(fields: [contestId], references: [id])

  photoId String
  photo   Photo  @relation(fields: [photoId], references: [id])

  voterId String // cookie id
  ipHash  String?
  uaHash  String?

  @@unique([voterId, photoId, voteType, contestId]) // dedupe per vote type per contest
  @@index([createdAt])
  @@index([voterId])
  @@index([voteType])
}
