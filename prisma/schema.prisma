generator client {
  provider   = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum VoteType {
  OVERALL
  TECHNICAL
  FUNNY
}

model Contest {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  submissionsClosedAt DateTime?
  endsAt      DateTime?

  photos      Photo[]
  votes       Vote[]
}

model Photo {
  id          String   @id @default(cuid())
  publicId    String   @unique // Cloudinary public_id
  secureUrl   String
  title       String?
  submittedAt DateTime @default(now())
  active      Boolean  @default(true)

  submitterEmail String?
  submitterId    String?

  contestId   String?
  contest     Contest? @relation(fields: [contestId], references: [id])

  // Elo ranking
  rating      Int      @default(1000)
  wins        Int      @default(0)
  losses      Int      @default(0)
  battles     Int      @default(0)

  votesWon    Vote[]   @relation("VotesWinner")
  votesLost   Vote[]   @relation("VotesLoser")
}

model Vote {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  voteType    VoteType @default(OVERALL)

  contestId   String?
  contest     Contest? @relation(fields: [contestId], references: [id])

  winnerId    String
  loserId     String
  winner      Photo    @relation("VotesWinner", fields: [winnerId], references: [id])
  loser       Photo    @relation("VotesLoser", fields: [loserId], references: [id])

  voterId     String   // cookie id
  ipHash      String?
  uaHash      String?

  @@index([createdAt])
  @@index([voterId])
  @@index([voteType])
  @@unique([voterId, winnerId, loserId, voteType, contestId]) // dedupe per vote type per contest
}
